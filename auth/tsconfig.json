{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": ["es6"],
		"types": ["reflect-metadata"],
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}