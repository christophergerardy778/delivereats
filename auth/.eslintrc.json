{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "xo",
	"overrides": [
		{
			"extends": [
				"xo-typescript"
			],
			"files": [
				"*.ts",
				"*.tsx"
			],
			"env": {
				"jest": true
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"new-cap": "off"
	}
}
